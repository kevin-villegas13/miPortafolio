---
import Layout from "../layouts/Layout.astro";
import CodeIcon from "../icons/Code.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Briefcase from "../icons/Briefcase.astro";
import Experiencia from "../components/Experiencia.astro";
import Proyecto from "../components/Proyecto.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import SobreMi from "../components/SobreMi.astro";
---

<Layout title="Portafolio Kevin">
  <main class="px-4">
    <SectionContainer class="py-8 sm:py-12 md:py-16 lg:py-36">
      <Hero />
      <slot />
    </SectionContainer>
    <div class="space-y-12 sm:space-y-16 md:space-y-24">
      <SectionContainer id="experiencia">
        <h2
          class="flex items-center justify-center mb-6 text-2xl sm:text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          Experiencia laboral
        </h2>
        <Experiencia />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2
          class="flex items-center mb-6 text-2xl sm:text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10" />
          Proyectos
        </h2>
        <Proyecto />
      </SectionContainer>

      <SectionContainer id="sobre-mi">
        <h2
          class="flex items-center mb-6 text-2xl sm:text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
        >
          <ProfileCheck class="w-6 h-6 sm:w-8 sm:h-8 md:w-10 md:h-10" />
          Sobre m√≠
        </h2>
        <SobreMi />
      </SectionContainer>
    </div>
  </main>
</Layout>
